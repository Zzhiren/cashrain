{
  "include": [
    "src/",
    "src/utils/*",
    "types/*"
  ],
  "exclude": [],
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "diagnostics": true,
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["es2017", "dom"],
    "declaration": false,
    "checkJs": true,
    "sourceMap": true,
    "removeComments":true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "listEmittedFiles": true,
    "listFiles": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["./types/**"],
    "skipLibCheck": true,
    "paths": {
      "@commands/*": ["src/commands/*"],
      "@core/*": ["src/core/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
    }
  },
}